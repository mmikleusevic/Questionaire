@page "/Login"

<EditForm OnValidSubmit="HandleValidSubmit" EditContext="editContext">
    <div class="mx-auto rounder border p-4 login-form">
        <h3 class="text-center mb-3">Login</h3>
        <DataAnnotationsValidator/>
        <ValidationSummary class="alert alert-danger"/>
        <hr>
        <div class="mb-3">
            <label class="form-label">UserName: <span class="text-danger">*</span></label>
            <div>
                <TextInput @bind-Value="@loginData.UserName" Placeholder="Enter your username"/>
                <ValidationMessage For="@(() => loginData.UserName)" class="alert alert-danger"/>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Password: <span class="text-danger">*</span></label>
            <div>
                <TextInput type="password" MaxLength="24" @bind-Value="@loginData.Password"
                           Placeholder="Enter your password"/>
                <ValidationMessage For="@(() => loginData.Password)" class="alert alert-danger"/>
            </div>
        </div>

        <div class="row">
            <div class="col d-grid">
                <Button Type="ButtonType.Submit" Outline="true" Color="ButtonColor.Primary" Class="float-end me-2">
                    Submit
                </Button>
            </div>
        </div>
    </div>
</EditForm>